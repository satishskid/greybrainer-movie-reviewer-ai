# Greybrainer AI Film Analysis Platform - Environment Configuration

# =============================================================================
# GEMINI AI MODEL CONFIGURATION
# =============================================================================

# Primary model for film analysis (fallback to config file if not set)
VITE_GEMINI_PREFERRED_MODEL=gemini-1.5-flash-latest

# Fallback model for when primary fails
VITE_GEMINI_FALLBACK_MODEL=gemini-pro

# Legacy model for emergency fallback
VITE_GEMINI_LEGACY_MODEL=gemini-1.0-pro-latest

# Enable/disable automatic model discovery
VITE_ENABLE_MODEL_DISCOVERY=true

# Model validation timeout (milliseconds)
VITE_MODEL_VALIDATION_TIMEOUT=30000

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Google Gemini API Base URL (usually doesn't need to be changed)
VITE_GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com

# API Version (v1beta, v1, etc.)
VITE_GEMINI_API_VERSION=v1beta

# =============================================================================
# LOGGING AND DEBUGGING
# =============================================================================

# Enable detailed model logging
VITE_ENABLE_MODEL_LOGGING=false

# Enable model performance metrics
VITE_ENABLE_MODEL_METRICS=false

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental model features
VITE_ENABLE_EXPERIMENTAL_MODELS=false

# Enable model auto-update checks
VITE_ENABLE_MODEL_AUTO_UPDATE=true

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env.local for local development
# 2. Update the values according to your needs
# 3. Never commit .env.local to version control
# 4. For production, set these as environment variables in your hosting platform
# 5. Model names should match Google's official Gemini API documentation